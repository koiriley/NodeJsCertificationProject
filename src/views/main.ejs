<html lang="en">
	<head>
		<meta http-equiv="content-type" content="text/html; charset=UTF-8">
		<meta charset="utf-8">
		<title>Weather App</title>
		<meta name="generator" content="Bootply" />
        <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
        <link href="/css/styles.css" rel="stylesheet">
		<link href="/css/bootstrap.min.css" rel="stylesheet">
		<link href="//netdna.bootstrapcdn.com/font-awesome/3.2.1/css/font-awesome.min.css" rel="stylesheet">
		


	</head>
	<body>
        <div class="container">
                <div >
                    <center>
                        <!-- Displays title -->
                        <h1><%=title%></h1>
                    </center>
                    <center>
                         <!-- Displays city name -->
                    <h2>City: <%=result.city.name%></h2>
                    </center>
                </div>
                <hr/>
                
                <div class="row">
                         <!-- Day 1 Weather Card -->
                        <%for(let i=0; i<1; i++){%>
                        <div class="card col-md-2">
                            <div class="row">
                            <img class="card-img-top" src='https://openweathermap.org/img/w/<%=result.list[i].weather[0].icon%>.png' alt="weather"/>
                            <span class="topTemp"><%=result.list[i].temp.day%>°F</span>
                            </div>
                            <div class="card-body">
                            <span class="max"><%=result.list[i].temp.max%></span>   /
                                      <span class="min"><%=result.list[i].temp.min%>°F</span>
                                <h4 class="card-title"><%=result.list[i].weather[0].main%></h4>
                                <p class="card-text">
                                    <p class="day"> Wednesday </p>
                                    <p class="day"> Apr. 21, 2020 </p>
                                    
                                    <p>Humidity: <%=result.list[i].humidity%>%</p>
                                    
                                </p>
                            </div>
                        </div>
                        <%}%>


